<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="d-flex flex-column flex-sm-row align-items-sm-center">
          <div class="input-group mb-2 mb-sm-0 mr-sm-2">
            <input type="text" name="keyword" value="{{keyword}}" class="form-control" placeholder="輸入餐廳、分類"
              aria-label="Restaurant Name..." aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>         

          <div class="input-group">
            <select class="form-control" id="sort" name="sort">
              <option>A > Z</option>
              <option>Z > A</option>
              <option>類別</option>
              <option>地區</option>
            </select>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
{{#if restaurants}}
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurants}}
        <a href="/restaurants/{{this._id}}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{this.name}}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal">
                {{this.rating}}
                <i class="fas fa-star fa-xs"></i>
              </span>

            </div>
            <div class="card-footer text-muted">
              <div class="row justify-content-end px-1">
                <a href="./restaurants/{{ this._id }}/edit" class="btn btn-outline-secondary mr-1">編輯</a>
                <a href="./restaurants/{{ this._id }}" class="btn btn-outline-secondary mr-1">詳細</a>
                <form action="./restaurants/{{ this._id }}?_method=DELETE" method="post">
                  <button type="submit" class="btn btn-outline-danger">刪除</button>
                </form>
              </div>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{else}}
<div class="container m-5 text-center">
  <p>找不到符合「<span class="text-danger">{{keyword}}</span>」的餐廳。請嘗試輸入其它關鍵字。</p>
  <a href="/"><i class="fas fa-undo-alt fa-2x" style="color:rgb(139, 109, 62)"></i></a>
</div>

{{/if}}